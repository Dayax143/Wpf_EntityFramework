<Window x:Class="WpfEntityFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEntityFramework"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Name="txtname" Width="100" Height="20" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0"/>
        <TextBox Name="txtquantity" Width="100" Height="20" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1"/>

        <Button Name="btnsubmit" Content="Submit" Width="100" Height="30" Grid.Row="0" Grid.Column="2" Click="btnsubmit_Click"></Button>
        <DataGrid Name="dgvTest" Margin="0,43,20,-135" Grid.RowSpan="3" Height="200" Grid.Column="0" Grid.ColumnSpan="4">
            
            <DataGrid.Columns>
                <DataGridCheckBoxColumn/>
                <DataGridComboBoxColumn/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
